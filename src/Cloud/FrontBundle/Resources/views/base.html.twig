<!doctype html>
<html>
<head>
    <title>Lenticular Cloud {% block title %}{% endblock %}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% stylesheets
        '@CloudFrontBundle/Resources/public/css/bootstrap.css'
        '@CloudFrontBundle/Resources/public/css/*'
        filter='?yui_css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
</head>
<body role="document">
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed"
					data-toggle="collapse" data-target="#navbar" aria-expanded="false"
					aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span> <span
						class="icon-bar"></span> <span class="icon-bar"></span> <span
						class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="{{ path('index') }}">Lenticular Cloud</a>
			</div>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					{% if is_granted('ROLE_USER') %}
					<li{% if app.request.get('_route')  matches '{^profile}' %} class="active"{% endif %}><a href="{{ path('profile') }}">Profile</a></li>
					<li{% if app.request.get('_route')  matches '{^services}' %} class="active"{% endif %}><a href="{{ path('services') }}">Services</a></li>
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
						<li{% if app.request.get('_route')  matches '{^admin}' %} class="active"{% endif %}><a href="{{ path('admin_index') }}">Admin</a></li>
					{% endif %}
					{% if is_granted('ROLE_ADMIN_REG') %}
						<li{% if app.request.get('_route')  matches '{^reg}' %} class="active"{% endif %}><a href="{{ path('registration_admin_index') }}">Reg. Admin</a></li>
					{% endif %}
					{% if not app.user %}
					<li{% if app.request.get('_route')  matches '{^reg}' %} class="active"{% endif %}><a href="{{ path('registration_index') }}">Sign Up</a></li>
					{% endif %}
				</ul>

				{% if app.user %}
				<ul class="nav navbar-nav pull-right">
					<li><a href="/logout">Logout</a></li>
				</ul>
				{% endif %}
			</div>
			<!--/.nav-collapse -->
		</div>
	</nav>
	<div class="container" role="main" style="margin-top:60px">
	{% block content %} {% endblock %}
	</div>
	<footer class="footer">
		<div class="container">
			<p class="pull-right">
				<a class="text-muted" href="https://github.com/LenticularCloud/Cloud-Ldap-Admin/issues">Report an Issue</a>
				|
				<a class="text-muted" href="https://github.com/LenticularCloud/Cloud-Ldap-Admin">Lenticular Cloud on Github</a>
			</p>
		</div>
	</footer>
	{% javascripts
                '@CloudFrontBundle/Resources/public/js/jquery.js'
                '@CloudFrontBundle/Resources/public/js/bootstrap.js'
                '@CloudFrontBundle/Resources/public/js/*'
                filter='?yui_js' %}
     <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
    <script type="text/javascript">{% block javascript_code %}{% endblock %}</script>
</body>
</html>
